{% extends "base.html.twig" %}

{% block page_title %}New Requirement{% endblock %}

{% block content %}
    <form class="form-horizontal" action="">
        <h1>Request Support</h1>

        <div class="form-group">
            <label class="col-md-2 control-label" for="summary">Summary</label>
            <div class="col-md-6">
                <input name="summary" class="form-control" type="text" autofocus>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" for="priority">Importance</label>
            <div class="col-md-6">
                <select class="form-control" name="importance" id="importance">
                    <option value="-">-</option>
                    <option value="important">I can not work!</option>
                    <option value="high">It's hindering my work</option>
                    <option value="medium">I can manage for now</option>
                    <option value="low">It's annoying me</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" for="description">Description</label>
            <div class="col-md-6">
                <textarea name="" class="form-control" id="description" rows="10"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" for=""></label>
            <div class="col-md-6">
                <button class="btn btn-primary pull-right">Request</button>
            </div>
        </div>

    </form>
{% endblock %}